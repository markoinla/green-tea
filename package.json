    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.563.0",
    "path-scurry": "1",
    "prettier": "^3.7.4",
    "radix-ui": "^1.4.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-markdown": "^10.1.0",
