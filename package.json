{
  "name": "greentea",
  "version": "5.2.3",
  "description": "Green Tea - knowledge work, caffeinated.",
  "main": "./out/main/index.js",
  "author": "Marko Stankovic <m@marko.la>",
  "homepage": "https://greentea.app",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/markoinla/green-tea.git"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "download-python": "node scripts/download-python.mjs",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run download-python && npm run build && electron-builder --win",
    "build:mac": "npm run download-python && source .env && electron-vite build && electron-builder --mac --arm64 --publish always && gh release edit v$(node -p \"require('./package.json').version\") --draft=false -R markoinla/green-tea",
    "build:linux": "npm run download-python && electron-vite build && electron-builder --linux",
    "pretest": "npm rebuild better-sqlite3",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "npm rebuild better-sqlite3 && vitest run --coverage",
    "test:integration": "vitest run --config vitest.integration.config.ts"
  },
  "dependencies": {
    "@anthropic-ai/sandbox-runtime": "^0.0.34",
    "@anthropic-ai/sdk": "^0.73.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@mariozechner/pi-ai": "^0.53.0",
    "@mariozechner/pi-coding-agent": "^0.53.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@sinclair/typebox": "^0.34.48",
    "@tiptap/extension-highlight": "^3.19.0",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-ordered-list": "^3.19.0",
    "@tiptap/extension-underline": "^3.19.0",
    "@vscode/ripgrep": "^1.17.0",
    "better-sqlite3": "^12.6.2",
    "bufferutil": "^4.1.0",
    "cmdk": "^1.1.1",
    "diff": "^8.0.3",
    "dotenv": "^17.2.4",
    "electron-updater": "^6.7.3",
    "linkedom": "^0.18.12",
    "sonner": "^2.0.7",
    "turndown": "^7.2.2",
    "utf-8-validate": "^6.0.6"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.1.18",
    "@tiptap/core": "^3.19.0",
    "@tiptap/extension-bullet-list": "^3.19.0",
    "@tiptap/extension-code-block-lowlight": "^3.19.0",
    "@tiptap/extension-list-item": "^3.19.0",
    "@tiptap/extension-mention": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-table": "^3.19.0",
    "@tiptap/extension-table-cell": "^3.19.0",
    "@tiptap/extension-table-header": "^3.19.0",
    "@tiptap/extension-table-row": "^3.19.0",
    "@tiptap/extension-task-item": "^3.19.0",
    "@tiptap/extension-task-list": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/react": "^3.19.0",
